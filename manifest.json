{
    "manifest_version": 3,
    "name": "Pirate Extension",
    "version": "1.0",
    "description": "Add's required controls for on sites",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["*://*.[sites_domain].com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }